name: Lint when Pull Request

on:
    pull_request:
        branches:
            - main

env:
    NODE_VERSION: 18

jobs:

    linting: 
        name: Linting
        runs-on: ubuntu-latest

        steps:
        -   name: Install NodeJs
            uses: actions/setup-node@3
            with: 
                node-version: ${{env.NODE-VERSION}}


        -   name: Code checkout
            uses: actions/checkout@v3

        -   name: Install dependencies
            run: npm ci

        -   name: Code linting
            run: npm run lint


